<table class="table is-fullwidth">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      {{!-- <th>Number of Crags</th> --}}
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
      <td> {{firstName}} </td>
      <td> {{lastName}} </td>
      <td> {{email}} </td>
      {{!-- <td> {{crags.length}} </td> --}}
      <td>
        <a href="/user/{{_id}}" class="button">
          <span class="icon is-small">
            <i class="fas fa-folder-open"></i>
          </span>
        </a>
      </td>
      <td>
        <a href="/admin/deleteUser/{{_id}}" class="button">
          <span class="icon is-small"></span>
          <i class="fas fa-trash-alt"></i>
        </a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>