<table id="routetable" class="table is-fullwidth" onload="sortTable()">
  <thead>
    <tr>
      <th>Route</th>
      <th>Grade</th>
      <th>Height</th>
      <th>First Ascent</th>
      <th>Description</th>
      <th>Date Route Complete</th>
    </tr>
  </thead>
  <tbody>
    {{#each crag.routes}}
      <tr id="route">
        <td>
          {{name}}
        </td>
        <td id="grade"> 
          {{grade}}
        </td>
         <td>
          {{height}}
        </td>
        <td>
          {{firstascent}}
        </td>
        <td>
          {{description}}
        </td>
         <td>
          {{datedone}}
        </td>
        <td>
        <td><a href="/crag/{{../crag._id}}/editroute/{{_id}}" class="ui icon button">
           <i class="fas fa-edit"></i>
            </a>
        </td>
        <td>
         <a href="/crag/{{../crag._id}}/deleteroute/{{_id}}" class="ui icon button">
                <i class="fas fa-trash-alt"></i>
            </a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>

